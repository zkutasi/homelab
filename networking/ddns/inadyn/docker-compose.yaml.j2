services:
  inadyn:
    container_name: inadyn
    environment:
      - TZ={{ timezone }}
    hostname: {{ id }}-inadyn
    image: troglobit/inadyn:v{{ requested_image_version['inadyn'] }}
    network_mode: host
    restart: unless-stopped
    volumes:
      - {{ docker_compose_rootdir }}/{{ docker_compose_projectname }}/config/inadyn.conf:/etc/inadyn.conf
