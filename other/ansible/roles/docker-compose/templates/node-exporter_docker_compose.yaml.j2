services:
  node_exporter:
    command:
      - '--path.rootfs=/host'
    container_name: node_exporter
    environment:
      - TZ={{ timezone }}
    image: quay.io/prometheus/node-exporter:v{{ requested_version['node-exporter'] }}
    network_mode: host
    pid: host
    restart: unless-stopped
    volumes:
      - '/:/host:ro,rslave'
