services:
  yadnsb:
    container_name: yadnsb
    environment:
      TZ: {{ timezone }}
    healthcheck:
      interval: 15s
      retries: 3
      start_period: 15s
      test: wget --no-verbose --tries=1 --spider http://localhost:3000/ || exit 1
      timeout: 5s
    image: ghcr.io/butialabs/yadnsb:{{ requested_image_version['yadnsb'] }}
    mem_limit: 256m
    ports:
      - {{ port_yadnsb }}:3000
    restart: unless-stopped
    security_opt:
      - no-new-privileges:true
